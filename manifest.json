{
  "manifest_version": 2,
  "name": "HLU Mark Calculation",
  "description": "This extension calculate your marks.",
  "version": "3.0",
	"icons": { "128": "icon.png" },
  "offline_enabled": true,
  "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
  "content_scripts": [
    {
      "matches": [ "http://210.245.13.149/CMCSoft.IU.Web.info/(*)/StudentMark.aspx", 
                  "http://dangkyhoc.hlu.edu.vn/CMCSoft.IU.Web.info/(*)/StudentMark.aspx",
                  "http://www.dangkyhoc.hlu.edu.vn/CMCSoft.IU.Web.info/(*)/StudentMark.aspx"
                ],
      "js": ["main.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
     "browser_action":{
    	"default_icon":"icon.png",
    	"default_popup":"popup.html"
    }
}
